<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <%- include('../partials/head.ejs') %>
    </head>
    <body class="page-body">
        <%- include('../partials/nav.ejs') %>
        <div class="container">
            <h3>Edit <%= careGiver.name %></h3>
            <form  action="/caregivers/<%= careGiver.id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="name" value="<%= careGiver.name %>">
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <textarea type="textarea" rows="3" class="form-control description" name="description"><%= careGiver.description %></textarea>
                </div>
                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Check me out</label>
                </div>
                <button type="submit" class="btn btn-secondary secondary-theme btn-outline-light">Submit</button>
            </form>
        </div>
        <%- include('../partials/footer.ejs') %>
    </body>
</html>
